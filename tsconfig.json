{
	"compilerOptions": {
		"target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
		"paths": {
			"~components/*": ["src/save/components/*"],
			"~static/*":  ["static/*"],
			"~/*":  ["src/*"],
			"@LocalType": ["types/index.d.ts"]
		},
	},
	"include": [
		"**/*.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
		"src/**/*",
		"types/**/*",
		".eslintrc.json"
	],
	"exclude": [
		"node_modules",
		"public"
	]
}